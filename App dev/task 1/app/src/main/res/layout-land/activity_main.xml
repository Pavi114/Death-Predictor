<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:baselineAligned="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_body"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:background="@color/dark_red"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="#4ab50000"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.5"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/enter_number_to_guess"
                    android:background="@color/medium_red"
                    android:textColor="#f5f5dc"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="22sp"
                    android:layout_margin="15dp" />


                <EditText
                    android:id="@+id/orgNum"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:textSize="22sp"
                    android:textColor="#f5f5dc"
                    android:background="@drawable/round_text"
                    android:hint="@string/_1_100"/>
            </LinearLayout>

            <Button
                android:id="@+id/guess"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                android:padding="2dp"
                android:layout_weight="1"
                android:textColor="#f5f5dc"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_button"
                android:text="@string/guess"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:background="@color/dark_red"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4ab50000"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/wins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textColor="#00FF00"
                    android:textAlignment="center"
                    android:background="@drawable/round_text"
                    android:textSize="20sp"
                    android:text="WINS : 0"/>
                <TextView
                    android:id="@+id/loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textColor="#FF0000"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/round_text"
                    android:textSize="20sp"
                    android:text="LOSS : 0"/>
            </LinearLayout>
            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:padding="2dp"
                android:textSize="15sp"
                android:textColor="#f5f5dc"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_button"
                android:text="@string/reset"/>

        </LinearLayout>

</LinearLayout>